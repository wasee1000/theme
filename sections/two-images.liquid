{% comment %}
  For Healthy Life Section
  Save this file as: sections/for-healthy-life.liquid
{% endcomment %}

<div class="healthy-life-section">
  <div class="container">
    <!-- Header Content -->
    <div class="header-content">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      
      {% if section.settings.description != blank %}
        <p class="section-description">{{ section.settings.description }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <div class="cta-wrapper">
          <a href="{{ section.settings.button_url }}" class="btn btn-outline">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
    
    <!-- Images Grid -->
    <div class="images-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="image-item" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <div class="image-wrapper">
                  {% if block.settings.link_url != blank %}
                    <a href="{{ block.settings.link_url }}">
                  {% endif %}
                  
                  <img 
                    src="{{ block.settings.image | img_url: '600x400' }}" 
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    class="block-image"
                  >
                  
                  {% if block.settings.link_url != blank %}
                    </a>
                  {% endif %}
                </div>
              {% else %}
                <div class="placeholder-image">
                  <svg viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect width="600" height="400" fill="#f5f5f5" rx="12"/>
                    <circle cx="300" cy="180" r="40" fill="#ddd"/>
                    <rect x="260" y="240" width="80" height="8" fill="#ddd" rx="4"/>
                    <rect x="280" y="260" width="40" height="6" fill="#eee" rx="3"/>
                  </svg>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
      
      <!-- Default placeholders if no blocks -->
      {% if section.blocks.size == 0 %}
        <div class="image-item">
          <div class="placeholder-image">
            <svg viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="600" height="400" fill="#f5f5f5" rx="12"/>
              <circle cx="300" cy="180" r="40" fill="#ddd"/>
              <rect x="260" y="240" width="80" height="8" fill="#ddd" rx="4"/>
              <rect x="280" y="260" width="40" height="6" fill="#eee" rx="3"/>
            </svg>
          </div>
        </div>
        <div class="image-item">
          <div class="placeholder-image">
            <svg viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="600" height="400" fill="#f5f5f5" rx="12"/>
              <circle cx="300" cy="180" r="40" fill="#ddd"/>
              <rect x="260" y="240" width="80" height="8" fill="#ddd" rx="4"/>
              <rect x="280" y="260" width="40" height="6" fill="#eee" rx="3"/>
            </svg>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .healthy-life-section {
    padding: {{ section.settings.padding_top | default: 80 }}px 0 {{ section.settings.padding_bottom | default: 80 }}px;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .header-content {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .section-title {
    font-size: {{ section.settings.title_font_size | default: 48 }}px;
    font-weight: {{ section.settings.title_font_weight | default: 300 }};
    line-height: 1.2;
    margin: 0 0 30px 0;
    color: {{ section.settings.title_color | default: '#333333' }};
    letter-spacing: -0.5px;
  }
  
  .section-description {
    font-size: {{ section.settings.description_font_size | default: 16 }}px;
    line-height: 1.6;
    margin: 0 0 40px 0;
    color: {{ section.settings.description_color | default: '#666666' }};
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-wrapper {
    margin-bottom: 20px;
  }
  
  .btn {
    display: inline-block;
    padding: 14px 32px;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-weight: 500;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
  }
  
  .btn-outline {
    background-color: transparent;
    color: {{ section.settings.button_text_color | default: '#333333' }};
    border: 2px solid {{ section.settings.button_border_color | default: '#333333' }};
  }
  
  .btn-outline:hover {
    background-color: {{ section.settings.button_hover_bg | default: '#333333' }};
    color: {{ section.settings.button_hover_text | default: '#ffffff' }};
    border-color: {{ section.settings.button_hover_bg | default: '#333333' }};
  }
  
  .images-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .image-item {
    position: relative;
  }
  
  .image-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .image-wrapper:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }
  
  .block-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
  }
  
  .placeholder-image {
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f9fa;
    border-radius: 12px;
    border: 2px dashed #dee2e6;
  }
  
  .placeholder-image svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 150px;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .healthy-life-section {
      padding: {{ section.settings.mobile_padding_top | default: 60 }}px 0 {{ section.settings.mobile_padding_bottom | default: 60 }}px;
    }
    
    .container {
      padding: 0 15px;
    }
    
    .header-content {
      margin-bottom: 40px;
    }
    
    .section-title {
      font-size: {{ section.settings.mobile_title_size | default: 36 }}px;
    }
    
    .section-description {
      font-size: {{ section.settings.mobile_description_size | default: 14 }}px;
    }
    
    .images-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    
    .block-image,
    .placeholder-image {
      height: 250px;
    }
  }
  
  @media (max-width: 480px) {
    .section-title {
      font-size: {{ section.settings.mobile_title_size | default: 28 }}px;
    }
    
    .btn {
      padding: 12px 24px;
      font-size: 13px;
    }
    
    .block-image,
    .placeholder-image {
      height: 200px;
    }
  }
</style>

