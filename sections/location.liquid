<div class="store-location-section">
  <div class="store-location-wrapper">
    {% if section.settings.heading != blank %}
      <h2 class="store-location-title">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.address != blank %}
      <div class="store-address">
        <p>{{ section.settings.address }}</p>
      </div>
    {% endif %}

    {% if section.settings.map_embed_url != blank %}
      <div class="store-map">
        <iframe 
          src="{{ section.settings.map_embed_url | strip }}" 
          width="100%" 
          height="400" 
          style="border:0; border-radius: 10px;"
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .store-location-section {
    padding: 60px 20px;
    background-color: #f9f9f9;
    text-align: center;
  }

  .store-location-title {
    font-size: 28px;
    margin-bottom: 20px;
  }

  .store-address p {
    font-size: 16px;
    color: #333;
    margin-bottom: 30px;
  }

  .store-map iframe {
    width: 100%;
    max-width: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }
</style>

{% schema %}
{
  "name": "Store Location (Editable)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title",
      "default": "Visit Our Store"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Store Address",
      "default": "Second Gate, Dhaka, Bangladesh"
    },
    {
      "type": "textarea",
      "id": "map_embed_url",
      "label": "Google Maps Embed URL (src only)",
      "default": "https://www.google.com/maps/embed?pb=..."
    }
  ],
  "presets": [
    {
      "name": "Store Location (Editable)"
    }
  ]
}
{% endschema %}
